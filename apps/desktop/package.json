{
  "name": "@app/desktop",
  "version": "0.1.0",
  "private": true,
  "description": "Timeless Heroes - The Developer Idle Game (Desktop App)",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "tsc -p tsconfig.electron.json && wait-on http://localhost:4000 && electron .",
    "build": "vite build && tsc -p tsconfig.electron.json",
    "start": "electron .",
    "package": "electron-builder"
  },
  "dependencies": {
    "@repo/shared-types": "workspace:*",
    "electron-store": "^8.2.0",
    "react-router-dom": "^6.22.0",
    "uiohook-napi": "^1.5.4"
  },
  "devDependencies": {
    "@types/node": "^22.19.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^35.7.5",
    "electron-builder": "^26.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.5.4",
    "vite": "^6.0.11",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.timelessheroes.app",
    "productName": "Timeless Heroes",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    }
  }
}