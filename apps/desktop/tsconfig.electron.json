{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": "electron",
        "declaration": false
    },
    "include": [
        "electron/**/*"
    ],
    "exclude": [
        "node_modules",
        "src"
    ]
}